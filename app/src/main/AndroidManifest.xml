<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.fbk.calc">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GaussCalc">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

    </application>

    <instrumentation
        android:name="eu.fbk.calc.AndroidJUnitRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for eu.fbk.calc"
        android:targetPackage="eu.fbk.calc">

        <meta-data
            android:name="listener"
            android:value="eu.fbk.calc.TesterListener" />

    </instrumentation>

    <!--<instrumentation android:name="eu.fbk.calc.CUstomTestRunner"-->
        <!--android:targetPackage="eu.fbk.calc"-->
        <!--android:label="Tests for eu.fbk.calc"/>-->

</manifest>